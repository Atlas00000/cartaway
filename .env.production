# Production Environment Variables Template
# Copy this file to .env.production and fill in your values

# Django Settings
DJANGO_SECRET_KEY=django-insecure-production-test-key-change-this-in-production
DJANGO_SETTINGS_MODULE=core.settings_production
ALLOWED_HOSTS=localhost,127.0.0.1

# Database Configuration
DB_NAME=ecommerce_prod
DB_USER=postgres
DB_PASSWORD=testpassword123
DB_HOST=postgres
DB_PORT=5432
DB_SSL=true

# Redis Configuration
REDIS_URL=redis://redis:6379/1

# CORS Settings
CORS_ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com,http://localhost:3000

# SSL/HTTPS Settings
SECURE_SSL_REDIRECT=false

# Email Configuration
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
DEFAULT_FROM_EMAIL=noreply@yourdomain.com

# Security Settings
SECURE_BROWSER_XSS_FILTER=true
SECURE_CONTENT_TYPE_NOSNIFF=true
X_FRAME_OPTIONS=DENY
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=true
SECURE_HSTS_PRELOAD=true

# Rate Limiting (requests per hour)
API_RATE_LIMIT_ANON=50
API_RATE_LIMIT_USER=500
AUTH_RATE_LIMIT=3
REGISTER_RATE_LIMIT=2

# Monitoring
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_TIMEOUT=30
HEALTH_CHECK_RETRY_COUNT=3

# File Upload Limits
MAX_FILE_SIZE=5242880
MAX_PRODUCT_IMAGES=10

# Cache Settings
CACHE_TIMEOUT_PRODUCTS=1800
CACHE_TIMEOUT_CATEGORIES=3600
CACHE_TIMEOUT_USER_CART=900
